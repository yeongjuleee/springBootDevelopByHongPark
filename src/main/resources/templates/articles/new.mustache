{{>layouts/header}}

    <form class="container" action="/articles/create" method="post"> <!-- 입력 폼 작성, 부트스트랩 CSS 코드 적용 -->
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title"> <!-- DTO의 title 필드와 연결하기 위해 name 을 넣고 필드 이름 설정 -->
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" rows="3" name="content"></textarea> <!-- DTO의 content 필드와 연결 -->
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/articles">Back</a> <!-- href 속성을 이용하여 목록 페이지로 돌아가는 링크 추가 -->
    </form>

{{>layouts/footer}}